<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:onClick="oneclick"
        android:text="最简单的运用@inject"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="14dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:onClick="twoclick"
        android:text="采用@module依赖"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="14dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:onClick="threeeclick"
        android:text="测试@inject与@module依赖优先级"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="14dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:onClick="fourclick"
        android:text="测试@Qualifier限定符作用"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="14dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:onClick="fiveclick"
        android:text="测试@sinfleton限定符作用"
        android:textColor="#333333"
        android:textSize="14sp" />

</LinearLayout>